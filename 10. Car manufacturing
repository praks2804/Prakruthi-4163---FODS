import numpy as np

average_efficiency = np.mean(fuel_efficiency)

model_1_efficiency = fuel_efficiency[0]  # Fuel efficiency of the 1st car model
model_2_efficiency = fuel_efficiency[2]  # Fuel efficiency of the 3rd car model

percentage_improvement = ((model_2_efficiency - model_1_efficiency) / model_1_efficiency) * 100

print(f"Average fuel efficiency: {average_efficiency:.2f} MPG")
print(f"Percentage improvement in fuel efficiency from Model 1 to Model 2: {percentage_improvement:.2f}%")
